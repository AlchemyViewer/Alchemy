<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 label="First Life"
 height="360"
 width="304"
 name="avatar_firstlife_tab">
  <panel
   name="avatar_info_top"
   follows="top|left|right"
   top="0"
   left="0"
   height="129"
   width="304"
   layout="topleft">
    <profile_image
     image_name="Generic_Person_Large"
     follows="left|top"
     height="120"
     label=""
     layout="topleft"
     left="5"
     name="fl_profile_pic"
     interactable="true"
	 for_profile="true"
     tool_tip="Click to choose a picture"
     top="6"
     width="120">
      <!-- It would be cool if this worked someday!
      <profile_image.commit_callback
       function="Profile.ModifyProfileImage"
       parameter="first_life" />
      -->
    </profile_image>
  </panel>
  <text_editor
   type="string"
   follows="all"
   left="3"
   height="200"
   layout="topleft"
   max_length="65000"
   name="fl_about"
   top="134"
   right="-4"
   bg_readonly_color="DkGray2"
   text_readonly_color="White"
   commit_on_focus_lost="true"
   word_wrap="true" 
   show_emoji_helper="true" />
</panel>
