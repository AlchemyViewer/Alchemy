<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
 border="true"
 height="408"
 label="Popups"
 layout="topleft"
 left="0"
 name="popups"
 top="500"
 width="517">
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="tell_me_label"
     top="10"
     width="300">
        Tell me:
    </text>
    <check_box
     control_name="NotifyMoneySpend"
     height="16"
     label="When I spend L$"
     layout="topleft"
     left="15"
     name="notify_money_spend_checkbox"
     top_pad="6"
     width="300" />
    <check_box
     control_name="ChatOnlineNotification"
     height="16"
     label="When my friends log in or out"
     layout="topleft"
     left_delta="120"
     name="friends_online_notify_checkbox"     
     width="30" />
    <check_box
     control_name="AlchemyOnlineOfflineToChat"
     enabled_control="ChatOnlineNotification"
     height="16"
     label="In Nearby Chat"
     layout="topleft"
     left_delta="230"
     name="friends_online_notify_checkbox_chat"     
     width="20" />
    <check_box
     control_name="NotifyMoneyReceived"
     height="16"
     label="When I get L$"
     layout="topleft"
     left="15"
     top_pad="4"	
     name="notify_money_received_checkbox"     
     width="300" /> 
     <check_box
     control_name="ShowStreamInfo"
     height="16"
     label="When music stream titles change"
     layout="topleft"
     left_delta="120"
     name="music_stream_title"     
     width="30" />
     <check_box
     control_name="ShowStreamInfoToChat"
     enabled_control="ShowStreamInfo"
     height="16"
     label="In Nearby Chat"
     layout="topleft"
     left_delta="240"
     name="music_stream_title_checkbox_chat"     
     width="20" />
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="show_label"
     top_pad="8"
     width="450">
        Always show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="140"
     layout="topleft"
     left="10"
     multi_select="true"
     name="enabled_popups"
     sort_column="0"
     sort_ascending="true" 
     width="495" />
	 <button
     follows="top|left"
     height="23"
     image_overlay="Arrow_Up"
     hover_glow_amount="0.15"
     layout="topleft"
     left="200"
     name="enable_this_popup"
     top_pad="5"
     width="40">
        <button.commit_callback
         function="Pref.ClickEnablePopup" />
    </button>
    <button
	 follows="top|left"
     height="23"
     image_overlay="Arrow_Down"
     hover_glow_amount="0.15"
     layout="topleft"
     left_pad="20"
     name="disable_this_popup"
     top_delta="0"
     width="40">
        <button.commit_callback
         function="Pref.ClickDisablePopup" />
    </button>
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="dont_show_label"
     top_pad="-10"
     width="450">
        Never show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="140"
     layout="topleft"
     left="10"
     sort_column="0"
     sort_ascending="true"
     multi_select="true"
     name="disabled_popups"
     width="495" />
</panel>
