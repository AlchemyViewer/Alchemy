<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Interface"
 layout="topleft"
 left="102"
 name="Interface panel"
 top="1"
 width="517">
  <text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left="30"
     name="float_text_label"
     mouse_opaque="false"
     top="10"
     width="300">
    Floating Text:
  </text>
  <text
   type="string"
   length="1"
   follows="left|top"
   height="10"
   layout="topleft"
   left="50"
   name="fade_dist_label"
   mouse_opaque="false"
   top_pad="10"
   width="200">
    Fade Distance
  </text>
  <slider
   can_edit_text="true"
   control_name="AlchemyHudTextFadeDistance"
   decimal_digits="2"
   follows="left|top"
   height="15"
   increment="0.05"
   initial_value="4.0"
   layout="topleft"
   left_delta="150"
   max_val="128"
   min_val="1"
   name="text_draw_distance"
   top_delta="0"
   width="180" />
  <text
   type="string"
   length="1"
   follows="left|top"
   height="10"
   layout="topleft"
   left_pad="6"
   mouse_opaque="false"
   name="text_box2"
   top_delta="1"
   width="200">
    m
  </text>
  <text
   type="string"
   length="1"
   follows="left|top"
   height="10"
   layout="topleft"
   left="50"
   name="fade_range_label"
   mouse_opaque="false"
   top_pad="10"
   width="200">
    Fade Range
  </text>
  <slider
   can_edit_text="true"
   control_name="AlchemyHudTextFadeRange"
   decimal_digits="2"
   follows="left|top"
   height="15"
   increment="0.05"
   initial_value="8.0"
   layout="topleft"
   left_delta="150"
   max_val="64"
   min_val="1"
   name="text_draw_distance"
   top_delta="0"
   width="180" />
  <text
   type="string"
   length="1"
   follows="left|top"
   height="16"
   layout="topleft"
   left_pad="6"
   mouse_opaque="false"
   name="text_box2"
   top_delta="1"
   width="200">
    m
  </text>
  <check_box
    control_name="AlchemyCinematicModeHideHoverText"
    height="16"
    initial_value="true"
    label="Hide in Cinematic Mode"
    layout="topleft"
    left="45"
    name="HideHoverTextInCinematicMode"
    top_pad="4"
    width="256">
    <check_box.commit_callback
      function="Pref.RenderOptionUpdate" />
  </check_box>
  <text
     type="string"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left="30"
     name="InventoryText"
     mouse_opaque="false"
     top_pad="3"
     width="300"
     valign="center">
    Inventory:
  </text>
  <check_box
    control_name="DoubleClickAttachmentAdd"
    height="16"
    initial_value="true"
    label="Double-click to add Attachments"
    layout="topleft"
    left="45"
    name="DoubleClickAttachmentAddCheck"
    top_pad="4"
    width="256"/>
  <check_box
    control_name="DoubleClickWearableAdd"
    height="16"
    initial_value="true"
    label="Double-click to add Wearables"
    layout="topleft"
    left="45"
    name="DoubleClickWearableAddCheck"
    top_pad="4"
    width="256"/>
    <text
    type="string"
    length="1"
    follows="left|top"
    height="16"
    layout="topleft"
    left="30"
    name="Appearance Editor"
    mouse_opaque="false"
    top_pad="5"
    width="300"
    font="SansSerifSmall">
    Appearance Editor:
  </text>
     <check_box
      follows="left|top"
      height="16"
      label="Show visual hints in wearable editors"
      layout="topleft"
      tool_tip="Enable or disable the visual hints showing the avatar parts being modified."
      left="45"
      top_pad="4"
      name="AlchemyAppearanceShowHints"
      width="275"
      control_name="AlchemyAppearanceShowHints"/>
  <text
     type="string"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left="30"
     name="SecurityText"
     mouse_opaque="false"
     top_pad="3"
     width="300"
     >
    Security:
  </text>
      <check_box
       follows="left|top"
       height="16"
       label="Block left-click sitting on Objects"
       left="45"
       top_pad="4"
       name="AlchemyDisableClickToSit"
       width="275"
       control_name="AlchemyDisableClickToSit"/>
      <check_box
       follows="left|top"
       height="16"
       label="Allow scripts to show map UI (llMapDestination)"
       left="45"
       top_pad="4"
       name="ScriptsCanShowUI"
       width="275"
       control_name="ScriptsCanShowUI"/>
      <text
       type="string"
       length="1"
       follows="left|top"
       height="19"
       layout="topleft"
       left="49"
       name="inworld_typing_rg_label"
       top_pad="5"
       width="300"
       value="Revoke object permissions when:" />
      <radio_group
       control_name="AlchemyRevokeObjectPerms"
       height="20"
       layout="topleft"
       name="revoke_perms_radio"
       width="340">
        <radio_item
         top_pad="0"
         left_delta="15"
         height="16"
         label="Never"
         layout="topleft"
         name="None"
         value="0"
         width="90" />
        <radio_item
         left_pad="1"
         height="16"
         label="Sitting"
         layout="topleft"
         name="Sitting"
         value="1"
         width="90" />
        <radio_item
         left_pad="1"
         height="16"
         label="Standing"
         layout="topleft"
         name="Standing"
         value="2"
         width="90" />
        <radio_item
         left_pad="1"
         height="16"
         label="Both"
         layout="topleft"
         name="Both"
         value="3"
         width="90" />
    </radio_group>
    <text
    type="string"
    length="1"
    follows="left|top"
    height="16"
    layout="topleft"
    left="30"
    name="World Effects"
    mouse_opaque="false"
    top_pad="5"
    width="300"
    font="SansSerifSmall">
    World:
 </text>
    <check_box
      top_pad="4"
      control_name="EnvironmentPersistAcrossLogin"
      follows="left|top"
      height="16"
      initial_value="true"
      name="EnvironmentPersistAcrossLogin"
      label="Persist Environment settings throughout sessions"
      left="45"
      width="500"
      tool_tip="Restores the current environment settings after next login."/>
     <check_box
      follows="left|top"
      height="16"
		  label="Create particle effects when scripts communicate"
	  	layout="topleft"
  		tool_tip="If enabled scripted objects display swirling particle lights when the scripts communicate"
      left="45"
      top_pad="4"
      name="EffectScriptChatParticles"
      width="275"
      control_name="EffectScriptChatParticles"/>
      <text
      type="string"
      length="1"
      follows="left|top"
      height="10"
      layout="topleft"
      left="30"
      name="UI Fonts"
      mouse_opaque="false"
      top_pad="5"
      width="300">
      UI Fonts:
   </text>

      <text
      layout="topleft"
      follows="left|top"
      top_pad="10"
      left="45"
      height="12"
      name="font_name"
      width="270">
    Global Font(restart required):
  </text>
  <combo_box
      control_name="FontOverrideMain"
      height="23"
      layout="topleft"
      follows="left|top"
      name="ui_font_name"
      left_pad="5"
      top_delta="-5"
      width="175">
    <item
        label="Deja Vu Sans"
        name="dejavu"
        value=""/>
    <item
        label="IBM Plex Sans"
        name="ibmplex"
        value="font_main_ibmplex.xml"/>
    <item
        label="IBM Plex Mono"
        name="ibmplexmono"
        value="font_main_ibmplexmono.xml"/>
    <item
        label="Open Dyslexic"
        name="opendyslexic"
        value="font_main_opendyslexic.xml"/>
    <item
		label="Noto Sans"
		name="notosans"
		value="font_main_notosans.xml"/>
    <item
        label="Source Sans 3"
        name="sourcesans"
        value="font_main_sourcesans.xml"/>
    <item
        label="Ubuntu"
        name="ubuntu"
        value="font_main_ubuntu.xml"/>
  </combo_box>
  <text
  layout="topleft"
  follows="left|top"
  top_pad="10"
  left="45"
  height="12"
  name="font_name"
  width="270">
Monospace Font(restart required):
</text>
  <combo_box
      control_name="FontOverrideMonospace"
      height="23"
      layout="topleft"
      follows="left|top"
      name="ui_font_name"
      left_pad="5"
      top_delta="-5"
      width="175">
    <item
        label="Deja Vu Sans Mono"
        name="dejavumono"
        value=""/>
    <item
        label="IBM Plex Mono"
        name="ibmplexmono"
        value="font_mono_ibmplex.xml"/>
    <item
        label="Noto Sans Mono"
        name="notosansmono"
        value="font_mono_notosans.xml"/>
    <item
        label="Source Code Pro"
        name="sourcecodepro"
        value="font_mono_sourcecodepro.xml"/>
    <item
        label="Ubuntu Mono"
        name="ubuntumono"
        value="font_mono_ubuntu.xml"/>
  </combo_box>
</panel>
